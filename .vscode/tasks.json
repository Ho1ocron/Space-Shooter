{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build godot-cpp debug",
            "type": "shell",
            "command": "scons",
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/space_gdext/godot-cpp"
            },
            "windows": {
                "args": [
                    "target=template_debug",
                    "platform=windows",
                    "generate_bindings=yes",
                    "-s",
                    "-j9"
                ]
            },
            "linux": {
                "args": [
                    "target=template_debug",
                    "platform=linux",
                    "generate_bindings=yes",
                    "-s",
                    "-j9"
                ]
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build godot-cpp release",
